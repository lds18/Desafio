<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

    <TextView
        android:id="@+id/textMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Cadastro de Jogos"
        android:textColor="#000000"
        android:textSize="34sp"
        android:layout_marginBottom="150dp"/>

    <TextView
        android:id="@+id/textV_Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do jogo:"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_below="@id/textMenu"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/editT_Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o jogo aqui"
        android:layout_below="@id/textV_Nome"
        android:layout_marginHorizontal="10dp"
       />

    <TextView
        android:id="@+id/textV_Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data do jogo:"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_below="@id/editT_Nome"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:id="@+id/editT_Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a data do jogo aqui"
        android:layout_below="@id/textV_Data"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/textV_Pont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação:"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_below="@id/editT_Data"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/editT_Pontuacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a pontuação do jogo aqui"
        android:inputType="numberDecimal"
        android:digits="0123456789"
        android:layout_below="@id/textV_Pont"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:id="@+id/btn_SalvarCadastro"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Salvar Cadastro"
        android:textSize="15dp"
        android:onClick="SalvarJogo"/>
</RelativeLayout>