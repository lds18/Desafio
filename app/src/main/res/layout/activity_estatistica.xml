<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estatistica">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="EstatÃ­sticas dos Jogos"
            android:textColor="#000000"
            android:textSize="34sp"
            android:layout_marginBottom="30dp"/>

        <ListView
            android:id="@+id/listview_jogos"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/textMenu"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="40dp"
            android:textColor="#000000"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/listview_jogos"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textV_MinTemporada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimo da temporada:"
                    android:layout_below="@id/listview_jogos"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textV_MaxTemporada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximo da temporada:"
                    android:layout_below="@id/textV_MinTemporada"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textV_QuebraRecordeMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quebra de recordes minimos:"
                    android:layout_below="@id/textV_MaxTemporada"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textV_QuebraRecordeMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quebra de recordes maximos:"
                    android:layout_below="@id/textV_QuebraRecordeMin"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/txtMinimoTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_below="@id/listview_jogos"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:layout_marginRight="60dp"/>

                <TextView
                    android:id="@+id/txtMaximoTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_below="@id/textV_MinTemporada"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:layout_marginRight="60dp"/>

                <TextView
                    android:id="@+id/txtQuebraMinima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_below="@id/textV_MaxTemporada"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:layout_marginRight="60dp"/>

                <TextView
                    android:id="@+id/txtQuebraMaxima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_below="@id/textV_QuebraRecordeMin"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:layout_marginRight="60dp"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</ScrollView>